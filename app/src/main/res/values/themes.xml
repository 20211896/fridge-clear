<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color - 검은색으로 변경 -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- 상태바 아이콘을 밝은 색(흰색)으로 설정 -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.T3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 상태바 색상을 검은색으로 설정 -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- 상태바 아이콘을 밝은 색(흰색)으로 설정 -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.T3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.T3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>