<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- 기존 드로어 메뉴 Fragment들 -->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.t3.ui.home.HomeFragment"
        android:label="@string/menu_fridge"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_order_history"
        android:name="com.example.t3.ui.orderhistory.OrderHistoryFragment"
        android:label="@string/menu_order_history"
