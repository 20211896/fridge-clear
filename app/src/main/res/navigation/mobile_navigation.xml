    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.t3.ui.home.HomeFragment"
        android:label="@string/menu_fridge"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.t3.ui.market.MarketFragment"
        android:label="마켓"
